{
  "compilerOptions": {
    "target": "es2016",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,  
    "baseUrl": "src",
    "paths": {
      "@routes/*": [ "routes/*" ],
      "@functions/*": [ "functions/*" ],
    },
    "typeRoots": [
      "types"
    ]
  },
  "include": [
    "./src",
    "./global"
  ]
}
